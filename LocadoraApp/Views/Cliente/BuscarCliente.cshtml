@model IEnumerable<Locadora.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h1>Nossos Clientes</h1>

<p>
    <a asp-action="CriaCliente">Adicionar Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPFCliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPFCliente)
            </td>
            <td>
                <a asp-action="EditaCliente" asp-route-id="@item.IdCliente">Editar</a> |
                <a asp-action="DetalheCliente" asp-route-id="@item.IdCliente">Detalhes</a> |
                <a asp-action="ApagaCliente" asp-route-id="@item.IdCliente">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
